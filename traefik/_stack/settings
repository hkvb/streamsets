#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="streamsets.base"
export VCW_STACK_GLOBAL_STACKNAMES="streamsets"
export VCW_STACK_GLOBAL_BOOTSTACKS=""
export VCW_STACK_GLOBAL_RUNSTACKS="streamsets"
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume:/data"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_STREAMSETS_ENVIRONMENT,\
$VCW_STACK_STREAMSETS_COMMAND,\
$VCW_STACK_STREAMSETS_PORTS,\
$VCW_STACK_STREAMSETS_VOLUMES,\
$VCW_STACK_STREAMSETS_NETWORKS,\
$VCW_STACK_STREAMSETS_DEPLOY_MODE,\
$VCW_STACK_STREAMSETS_COMPOSE_EXTENSIONS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="streamsets"
export VCW_STACK_GLOBAL_IMAGE_NAME="hkvb/streamsets.base"
export VCW_STACK_STREAMSETS_ENVIRONMENT="\
'SDC_JAVA_OPTS=-Xmx${DOLLAR}{VCW_STACK_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY} -Xms${DOLLAR}{VCW_STACK_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY}', \
'SDC_CONF_HTTP_BINDHOST=0.0.0.0', \
'SDC_CONF_HTTP_ENABLE_FORWARDED_REQUESTS=true', \
'SDC_CONF_HTTP_AUTHENTICATION=none', \
'SDC_CONF_BUNDLE_UPLOAD_ENABLED=false'"
export VCW_STACK_STREAMSETS_COMMAND=
export VCW_STACK_STREAMSETS_PORTS=
export VCW_STACK_STREAMSETS_VOLUMES="'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume:/data'"
export VCW_STACK_STREAMSETS_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_STREAMSETS_DEPLOY_MODE="replicated"
export VCW_STACK_STREAMSETS_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay,
      \"traefik.http.middlewares.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_streamsets.stripprefix.prefixes=/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX},/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}/\",
      traefik.http.services.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_streamsets.loadbalancer.server.port=18630,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_streamsets.middlewares=${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_streamsets@docker,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_streamsets.entrypoints=infometis,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_streamsets.rule=PathPrefix(\"/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}\")]
${DOLLAR}{VCW_STACK_STREAMSETS_COMPOSE_EXTENSIONS}"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay: { external: true }, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS streamsets.base
export VCW_STACK_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_STREAMSETS_MEMORY_RESERVED}"
export VCW_STACK_STREAMSETS_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_STREAMSETS_MEMORY_LIMIT}"
# END SETTINGS streamsets.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
